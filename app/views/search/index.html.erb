<%= render 'search/form' %>

<h1 class="text-center"><%= pluralize(@articles.count, "Result") %></h1>
<div class="container">
  <table class="table table-dark table-striped">
    <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td><%= article.photo %></td>
        <td><%= link_to article.title, article%></td>
        <td><%= article.body.truncate_words(25)%></td>
      </tr>
    <% end %>
   </tbody>
  </table>
</div>
