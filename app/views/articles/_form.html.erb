
<%= simple_form_for(article) do |f| %>
  <%= f.input :title, label: 'Article Title' %>
  <%= f.input :body %>
  <%= f.input :status %>
  <%= f.input :category, label: 'Category' %>
  <%= f.input :prefecture, label: 'Prefecture' %>
  <%= f.input :image, as: :file %>
  <%= f.submit "Submit", class: 'btn btn-info mt-2' %>
<% end %>
